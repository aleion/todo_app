
        
        
<div class="container ">
<div class="col-md-8 col-md-offset-2   ">
    <% @todos.each do |todo| %>
    <div class="well ">
    
    <% if todo.completed == true %>
    <div class="row align-items-center">
    <div class="col-md-1"></div>
      <div class="col-md-7 ">
        <p class="display-4 title" style="opacity: 0.5;"><s><%= todo.description%></s></p>
        <p class="cr_ag">Created <%= time_ago_in_words todo.created_at %> ago</p>
      </div>      

      <div class="col-md-1 text-center pad_btn">
        <p style="font-size: 20px;"><%= link_to todo_path(todo.id) do%></p>
        <i class="fas fa-lg fa-eye" style="color:black"></i>
        <% end %>
      </div>  
      <div class="col-md-1 text-center pad_btn">
        <p><%= link_to edit_todo_path(todo.id) do%></p>
        <i class="fa fa-lg fa-pen" style="color:black"></i>
        <% end %>
      </div>  
      <div class="col-md-1 text-center pad_btn">
        <p><%= link_to todo, method: :delete do %></p>
        <i class="fa fa-lg fa-trash" style="color:red; opacity: 0.7;"></i>
        <% end %>
      </div>  
      
    </div>
    <% else %>
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-6">
                <p class="title"><%= todo.description%></p>
                <p class="cr_ag">Created <%= time_ago_in_words todo.created_at %> ago</p>
            </div>    
                
            <div class="col-md-1 text-center pad_btn">    
                <p><%= link_to complete_todo_path(todo.id) do%></p>
                <i class="fa fa-lg fa-check" style="color:black" ></i>
                <% end %>
            </div>    
                
            <div class="col-md-1 text-center pad_btn pad_btn"> 
                <p style="font-size: 20px;"><%= link_to todo_path(todo.id) do%></p>
                <i class="fas fa-lg fa-eye" style="color:black"></i>
                <% end %>
            </div>
            <div class="col-md-1 text-center pad_btn pad_btn">                
                <p><%= link_to edit_todo_path(todo.id) do%></p>
                <i class="fa fa-lg fa-pen" style="color:black"></i>
                <% end %>
            </div>    
            <div class="col-md-1 text-center pad_btn">                
                <p><%= link_to todo, method: :delete do %></p>
                <i class="fa fa-lg fa-trash" style="color:red; opacity: 0.7;" ></i>
                <% end %>
             </div>   
             <div class="col-md-1"></div>
                
        </div>
        
</div>
    
    
    
    <% end %>
<% end %>
</div>
 </div> 
